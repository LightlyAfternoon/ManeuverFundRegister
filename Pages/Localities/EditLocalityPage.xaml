<Page x:Class="Реестр_маневренного_фонда.Pages.Localities.EditLocalityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Реестр_маневренного_фонда.Pages.Localities"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование населённого пункта">

    <Grid>
        <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" x:Name="bt_Back" Content="Назад" Click="bt_Back_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Наименование населённого пункта" Margin="0,10"/>
            <TextBox x:Name="tb_NameLocality" Height="25" BorderBrush="Blue"/>

            <Button x:Name="bt_Edit" Content="Изменить" Margin="0,10" Click="bt_Edit_Click"/>
        </StackPanel>
    </Grid>
</Page>