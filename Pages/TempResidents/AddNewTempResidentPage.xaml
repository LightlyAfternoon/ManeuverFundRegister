<Page x:Class="Реестр_маневренного_фонда.Pages.TempResidents.AddNewTempResidentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Реестр_маневренного_фонда.Pages.TempResidents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление нанимателя">

    <Grid>
        <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" x:Name="bt_Back" Content="Назад" Click="bt_Back_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Фамилия"/>
            <TextBox Height="25" x:Name="tb_LastName" BorderBrush="Blue"/>
            <TextBlock Text="Имя"/>
            <TextBox Height="25" x:Name="tb_FirstName" BorderBrush="Blue"/>
            <TextBlock Text="Отчество"/>
            <TextBox Height="25" x:Name="tb_Patronymic"/>
            <TextBlock Text="Примечание" Margin="0,20,0,0"/>
            <TextBox Height="25" x:Name="tb_Remark" Width="200"/>

            <Button x:Name="bt_Add" Content="Добавить" Margin="0,10" Click="bt_Add_Click"/>
        </StackPanel>
    </Grid>
</Page>