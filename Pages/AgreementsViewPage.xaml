<Page x:Class="Реестр_маневренного_фонда.Pages.AgreementsViewPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Реестр_маневренного_фонда.Pages"
        mc:Ignorable="d">
    <Grid>
        <DataGrid x:Name = "dg_Agreements" AutoGenerateColumns = "False">
            <DataGrid.Columns>
                <DataGridTextColumnHeader = "Номер договора" Binding = "{Binding NumberAgreement}"/>
                <DataGridTextColumnHeader = "ФИО нанимателя" Binding = "{Binding TempResident.FullName}"/>
                <DataGridTextColumnHeader = "Адрес жилья" Binding = "{Binding HousingFund.FullAddress}"/>
                <DataGridTextColumnHeader = "Дата заключения" Binding = "{Binding DateConclusionAgreement, StringFormat = '{0:dd.MM.yyyy}'"/>
                <DataGridTextColumnHeader = "Дата окончания" Binding = "{DateEndAgreement, StringFormat = '{0:dd.MM.yyyy}'"/>
                <DataGridTextColumnHeader = "Дата расторжения" Binding = "{DateTerminationAgreement, StringFormat = '{0:dd.MM.yyyy}'"/>
                <DataGridTextColumnHeader = "Примечание" Binding = "{Binding Remark}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
