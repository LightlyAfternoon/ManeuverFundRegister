<Page x:Class="Реестр_маневренного_фонда.Pages.HousingFundViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Реестр_маневренного_фонда.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HousingFundViewPage">

    <Grid>
        <DataGrid x:Name = "dg_HousingFund" AutoGenerateColumns = "False" CanUserResizeColumns="True" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Адрес жилья" Binding = "{Binding FullAddress}"/>
                <DataGridTextColumn Header = "Степень благоустроености" Binding = "{Binding ImprovementDegree.NameImprovementDegree}"/>
                <DataGridTextColumn Header = "S по постановлению" Binding = "{Binding DecreeArea}"/>
                <DataGridTextColumn Header = "S по реестру" Binding="{Binding RegisterArea}"/>
                <DataGridTextColumn Header = "Примечание" Binding="{Binding Remark}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
